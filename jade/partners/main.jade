extends ./../data/partners

block partnersContent
  mixin partnerLogo(partner, index)
    li.col-xs-4.col-sm-2.col-md-2.center-col.padding-top-xxs.padding-bottom-xxs.cursor-pointer(class=(index == 0 ? 'active':''), data-target='#partners-list', data-slide-to=index)
      img.img-responsive(src="assets/img/"+partner.logo+".png", alt=partner.name+" logo")
  mixin partnerDesc(partner, index)
    .item.padding-bottom-xxl.padding-top-s(class=(index == 0 ? 'active':''), style="background: url("+"assets/img/partners/"+partner.photo+".jpg)")
      .container.color-white 
        //img(src="assets/img/partners/"+partner.photo+".jpg", alt=partner.name+" logo")
        .row.text-left
          .col-xs-5.col-xs-offset-1.col-sm-6.col-md-6.center-col
            h3.margin-top-none.text-uppercase=partner.name
            a.font-italic.link-light.lead(href=partner.url, target="_blank")=partner.url
          .col-xs-5.col-sm-4.col-md-3.center-col.text-right
            img.img-responsive(src="assets/img/"+partner.logo+".png", alt=partner.name+" logo")
        .row.text-justify
          .col-xs-10.col-xs-offset-1
            p.lead.hidden-xs.hidden-sm=partner.desc
            p.hidden-md.hidden-lg=partner.desc
        .hidden-sm.hidden-md.padding-bottom-m
              
  mixin partnersList()
    .carousel-inner
      each partner, i in PartnersArray
        +partnerDesc(partner, i)
    a.left.carousel-control(href='#partners-list', role='button', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
        span.sr-only Previous
    a.right.carousel-control(href='#partners-list', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next
    .partner-indicators
      .container
        ol.row.center-container.padding-left-none.text-center.carousel-indicators
          each partner, i in PartnersArray
            +partnerLogo(partner, i)
  .margin-top-l
  header#partners-list.carousel.slide(data-ride="carousel")
    +partnersList()
      
      