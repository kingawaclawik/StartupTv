mixin fav(secondLvl)
  if(secondLvl)
    - var favScr ='./../fav/'
  else
    - var favScr = './fav/'
  link(rel='mask-icon', href=favScr+'safari-pinned-tab.svg', color='#002e4c')
  link(rel='apple-touch-icon', sizes='57x57', href=favScr+'apple-touch-icon-57x57.png')
  link(rel='apple-touch-icon', sizes='60x60', href=favScr+'apple-touch-icon-60x60.png')
  link(rel='apple-touch-icon', sizes='72x72', href=favScr+'apple-touch-icon-72x72.png')
  link(rel='apple-touch-icon', sizes='76x76', href=favScr+'apple-touch-icon-76x76.png')
  link(rel='apple-touch-icon', sizes='114x114', href=favScr+'apple-touch-icon-114x114.png')
  link(rel='apple-touch-icon', sizes='120x120', href=favScr+'apple-touch-icon-120x120.png')
  link(rel='apple-touch-icon', sizes='144x144', href=favScr+'apple-touch-icon-144x144.png')
  link(rel='apple-touch-icon', sizes='152x152', href=favScr+'apple-touch-icon-152x152.png')
  link(rel='apple-touch-icon', sizes='180x180', href=favScr+'apple-touch-icon-180x180.png')
  link(rel='icon', type='image/png', href=favScr+'favicon-32x32.png', sizes='32x32')
  link(rel='icon', type='image/png', href=favScr+'favicon-194x194.png', sizes='194x194')
  link(rel='icon', type='image/png', href=favScr+'favicon-96x96.png', sizes='96x96')
  link(rel='icon', type='image/png', href=favScr+'android-chrome-192x192.png', sizes='192x192')
  link(rel='icon', type='image/png', href=favScr+'favicon-16x16.png', sizes='16x16')
  link(rel='manifest', href=favScr+'manifest.json')
  link(rel='mask-icon', href=favScr+'safari-pinned-tab.svg', color='#002e4c')
  link(rel='shortcut icon', href=favScr+'favicon.ico')
  meta(name='msapplication-TileColor', content='#da532c')
  meta(name='msapplication-TileImage', content=favScr+'mstile-144x144.png')
  meta(name='msapplication-config', content=favScr+'browserconfig.xml')
  meta(name='theme-color', content='#ffffff')